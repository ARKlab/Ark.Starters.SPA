{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "chakra-ui": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@chakra-ui/react-mcp"
      ],
      "enabled": true
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true
    },
    "awesome-copilot": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "ghcr.io/microsoft/mcp-dotnet-samples/awesome-copilot:latest"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "ado": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@azure-devops/mcp",
        "arklabita"
      ],
      "enabled": true
    }
  }
}